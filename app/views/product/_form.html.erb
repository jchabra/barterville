<div class="span9">
    <%= form_for(@product) do |f| %>
        <div class="field">
            <%= f.label :name %><br />
            <%= f.text_field :name %>
        </div>

        <div class="field" id="description-field">
            <%= f.label :description %><br />
            <%= f.text_area :description %>
        </div>

        <div class="field">
            <%= f.label :condition %><br />
            <%= f.text_field :condition %>
        </div>
    <% end %> 
</div>