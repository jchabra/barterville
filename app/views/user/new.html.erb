<h1>New user</h1>

<%= form_for(@user, :url => '/user') do |f| %>

  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  
  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
  </div>
  
  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </div>
  
  <div class="field">
    <%= f.label :zip, "Zip Code:" %><br />
    <%= f.number_field :zip %>
  </div>
  
  <div class="field">
    <%= f.label :bio, "Bio:" %><br />
    <%= f.text_area :bio %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
