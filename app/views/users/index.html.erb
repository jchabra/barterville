<% content_for :title, "All Users" %>

<h3>Users</h3>
<table class="table table-striped">
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>User Name</th>
    <th></th>
  </tr>

	<% @users.each do |user| %>
	<tr>
		<td><%= user.first_name %></td>
		<td><%= user.last_name %></td>
		<td><%= user.username %></td>
		<td><%= link_to 'Show', user %></td>
	<% end %>
</table>

<div class="new_user"><%= link_to 'New User', new_user_path %></div>